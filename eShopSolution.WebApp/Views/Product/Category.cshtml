
@model ProductCategoryViewModel
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{
    
    ViewData["Title"] = Model.Category.Name+(Model.Product.PageIndex==1?"":" - " +_loc["Page"]+" "+Model.Product.PageIndex);
    ViewData["Description"] = Model.Category.Name + (Model.Product.PageIndex == 1 ? "" : " - " + _loc["Page"] + " " + Model.Product.PageIndex);
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture;
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
<ul class="breadcrumb">
    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
    <li class="active">Products Name</li>
</ul>
<h3> @Model.Category.Name <small class="pull-right">40 <localize>availavle products</localize> </small></h3>
<hr class="soft" />
<p>
    Mô tả danh mục
</p>
<hr class="soft" />
<form class="form-horizontal span6">
    <div class="control-group">
        <label class="control-label alignL"><localize>Sort By </localize></label>
        <select>
            <option>Priduct name A - Z</option>
            <option>Priduct name Z - A</option>
            <option>Priduct Stoke</option>
            <option>Price Lowest first</option>
        </select>
    </div>
</form>

<div id="myTab" class="pull-right">
    <a href="#listView" data-toggle="tab"><span class="btn btn-large"><i class="icon-list"></i></span></a>
    <a href="#blockView" data-toggle="tab"><span class="btn btn-large btn-primary"><i class="icon-th-large"></i></span></a>
</div>
<br class="clr" />
<div class="tab-content">
    <div class="tab-pane" id="listView">
        @{ 
               var folder = "user-content/";
        }
     
        @for (int i = 0; i < Model.Product.Items.Count; i++)
        {
            var item = Model.Product.Items[i];
            var url = $"/{culture.Name}/{_loc["ProductUrl"]}/{item.Id}";
            <div class="row">
                <div class="span2">
                    <img src="@(Configuration["BaseAddress"]+folder+@item.ThumbnailImage)" />
                </div>
                <div class="span4">
                    <h3><localize>New | Available</localize></h3>
                    <hr class="soft" />
                    <h5>@item.Name </h5>
                    <p>
                        @item.Description
                    </p>
                    <a class="btn btn-small pull-right" href="@url"><localize>Details</localize></a>
                    <br class="clr" />
                </div>
                <div class="span3 alignR">
                    <form class="form-horizontal qtyFrm">
                        <h3> @item.Price.ToString("C", culture)</h3>
                        <label class="checkbox">
                            <input type="checkbox">  Adds product to compair
                        </label><br />

                        <a href="@url" class="btn btn-large btn-primary"><localize> Add to</localize> <i class=" icon-shopping-cart"></i></a>
                        <a href="@url" class="btn btn-large"><i class="icon-zoom-in"></i></a>

                    </form>
                </div>
            </div>
            <hr class="soft" />

        }

    </div>

    <div class="tab-pane  active" id="blockView">
        <ul class="thumbnails">
            @for (int i = 0; i < Model.Product.Items.Count; i++)
            {
                var item = Model.Product.Items[i];
                var url = $"/{culture.Name}/{_loc["ProductUrl"]}/{item.Id}";
                <li class="span3">
                    <div class="thumbnail">
                        <a href="@url"><img src="@(Configuration["BaseAddress"]+folder+@item.ThumbnailImage)" alt="@item.Name" /></a>
                        <div class="caption">
                            <h5>@item.Name</h5>
                            <p>
                                @item.Description
                            </p>
                            <h4 style="text-align:center">
                                <a class="btn" href="@url"> <i class="icon-zoom-in"></i></a>
                                <a class="btn" href="#"><localize>Add to</localize><i class="icon-shopping-cart"></i></a>
                                <a class="btn btn-primary" href="#">@item.Price.ToString("C", culture)</a>
                            </h4>
                        </div>
                    </div>
                </li>

            }

        </ul>
        <hr class="soft" />
    </div>
</div>
@await Component.InvokeAsync("Pager",Model.Product)
<br class="clr" />
